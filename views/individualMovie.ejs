<html>
    <head>
        <link rel="stylesheet" href="/global.css">
        <link rel="stylesheet" href="/header.css">
        <link rel="stylesheet" href="/individualMovie.css">
        <title><%= movie.title %></title>
    </head>
    <body>
        <%- include('partials/header')%>
        <div class="main">
            <div class="image-section" >
                <div class="image-container" style=" background-image:url('<%= movie.imagesrc%>');">
                </div>
                <div class="btns">
                    <a href="/movies/update/<%=movie.movieid%>">Edit movie</a>  
                    <form action="/movies/delete/<%=movie.movieid%>" method="post">
                        <button type="submit"> Delete movie </button>
                    </form>
                </div>
            </div>
            <div class="content">
                <h2 class="title"><%= movie.title %></h2>
                <div>
                    <div class="desc-title">Rating</div>
                    <div class="desc-text"><%=movie.rating%></div>

                    <div class="desc-title">Release Date</div>
                    <div class="desc-text"><%=movie.releasedate%></div>

                    <div class="desc-title">Genres</div>
                    <div class="genres-container">
                        <a class="genre" href="/genres/<%=movie.genreid%>"><%=genreName[0].toUpperCase() + genreName.slice(1)%></a>                    
                    </div>

                    <div class="desc-title">Summary</div>
                    <div class="desc-text"><%=movie.summary%></div>
                </div>
            </div>
        </div>        

    </body>
</html>

