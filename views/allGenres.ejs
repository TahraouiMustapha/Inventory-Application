<html>
    <head>
        <link rel="stylesheet" href="global.css">
        <link rel="stylesheet" href="header.css">
        <link rel="stylesheet" href="allGenre.css">
        <title> All genres </title>
    </head>
    <body>
        <%- include('partials/header')%>


        <div class="content">
            <h2 class="title">All Genres</h2>
            <div class="genres-container">
                <% genres.forEach(genre=> {%>
                    <a class="genre" href="/genres/<%=genre.genreid%>"><%=genre.name[0].toUpperCase() + genre.name.slice(1)%></a>
                <%})%>    
        </div>
    </body>
</html 